{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[svelte]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"eslint.probe": ["javascript", "html", "markdown", "svelte", "typescript"],
	"eslint.validate": ["typescript", "svelte"],
	"liveServer.settings.root": "./build"
}
