{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.probe": [
		"javascript",
		"html",
		"markdown",
		"svelte",
		"typescript"
	],
	"eslint.validate": [
		"typescript",
		"svelte"
	],
	"liveServer.settings.root": "./build",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		".svelte-kit": true,
		"build": true,
		"node_modules": true,
		".github": true,
		".husky": true,
		".storybook": true
	}
}